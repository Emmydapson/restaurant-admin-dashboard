{
  "parser": "@babel/eslint-parser",
  "plugins": ["babel"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@next/next/recommended"
  ],
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "babel/new-cap": "warn",
    "babel/no-invalid-this": "warn",
    "babel/semi": "warn",
    "babel/no-unused-expressions": "warn"
  }
}
